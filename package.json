{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test:bare": "jest --no-cache",
    "test:generate-output": "npm run test:bare -- --json --outputFile=jest-test-results.json",
    "test": "npm run test:generate-output -- --watch",
    "test:coverage": "npm run test:bare -- --coverage",
    "lint-fix": "tsdx lint --fix",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "build:tailwind": "postcss src/styles/base.css -o src/styles/tailwind.css"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "reporters": [
      "default",
      "jest-junit"
    ],
    "rootDir": "src",
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "html",
      "lcov",
      "cobertura"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 95,
        "branches": 95,
        "functions": 95,
        "lines": 95
      }
    },
    "setupFiles": [
      "../jest.setup.ts"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/file-mock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/style-mock.js"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "react-comp-lib",
  "author": "Ankit Agarwal",
  "module": "dist/react-comp-lib.esm.js",
  "size-limit": [
    {
      "path": "dist/react-comp-lib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-comp-lib.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@size-limit/preset-small-lib": "^4.7.0",
    "@storybook/addon-a11y": "^6.3.8",
    "@storybook/addon-controls": "^6.3.8",
    "@storybook/addon-essentials": "^6.3.8",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.3.8",
    "@storybook/addon-storysource": "^6.3.8",
    "@storybook/addons": "^6.3.8",
    "@storybook/react": "^6.3.8",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^3.4.2",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.2.1",
    "babel-preset-react-app": "^10.0.0",
    "cssnano": "^4.1.10",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-junit": "^12.0.0",
    "jest-matcher-css": "^1.1.0",
    "mock-match-media": "^0.1.4",
    "postcss": "^7.0.35",
    "postcss-cli": "^8.3.0",
    "react": "^17.0.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-test-renderer": "^17.0.1",
    "rollup-plugin-postcss": "^3.1.8",
    "size-limit": "^4.7.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.1",
    "tailwindcss-multi-theme": "^1.0.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5"
  }
}
